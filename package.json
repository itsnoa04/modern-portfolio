{
  "name": "modern-portfolio",
  "version": "0.1.0",
  "author": {
    "name": "Devamsh Manoj",
    "url": "https://devamshmanoj.me/"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": " prettier --check . && next lint",
    "format": "prettier --write .",
    "test": "npm run test:jest && npm run test:cy",
    "test:cy": "start-server-and-test dev http://localhost:3000 cy:run",
    "test:jest": "jest --env=jsdom",
    "test:watch": "jest --watch --env=jsdom",
    "test:coverage": "jest --coverage --env=jsdom",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "dependencies": {
    "next": "12.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.54.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm build && npm run format && git add -A *"
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.0.1",
    "@types/node": "18.7.17",
    "@types/react": "18.0.19",
    "@types/react-dom": "18.0.6",
    "@types/testing-library__jest-dom": "^5.14.5",
    "babel-jest": "^29.0.3",
    "cypress": "^10.7.0",
    "eslint": "8.23.1",
    "eslint-config-next": "12.3.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "prettier": "^2.7.1",
    "start-server-and-test": "^1.14.0",
    "typescript": "4.8.3"
  }
}